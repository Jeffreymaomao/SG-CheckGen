{
  "$schema": "https://github.com/tauri-apps/tauri-schema/releases/latest/download/schema.json",
  "package": {
    "productName": "Check Generator",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readBinaryFile": true
      },
      "shell": {
        "all": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.check.generator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'none';"
    },
    "windows": [
      {
        "label": "main",
        "title": "Check Generator",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  }
}
